algoritmo "Idade"
// Função :
// Autor :
// Data : 24/07/2020
// Seção de Declarações 
var
   ano_atual, ano_nasc, idade: Inteiro
inicio
// Seção de Comandos 
   Escreva("Em que ano nos estamos?")
   Leia(ano_atual)
   Escreva("Em que ano eu nasci?")
   Leia(ano_nasc)
   idade <- ano_atual - ano_nasc
   Escreva("Minha idade é: ", idade)

fimalgoritmo
